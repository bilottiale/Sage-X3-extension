{
  "name": "fourgl-language-support",
  "displayName": "Sage X3 4GL Developer Tools",
  "description": "Advanced Language Server Protocol (LSP) for 4GL and Sage X3 development with intelligent code completion, snippets, syntax highlighting, and diagnostics",
  "version": "1.0.0",
  "publisher": "SageX3helper",
  "author": {
    "name": "4GL Tools Team"
  },
  "license": "MIT",
  "homepage": "https://github.com/SageX3helper/fourgl-language-support",
  "repository": {
    "type": "git",
    "url": "https://github.com/SageX3helper/fourgl-language-support.git"
  },
  "bugs": {
    "url": "https://github.com/SageX3helper/fourgl-language-support/issues"
  },
  "keywords": [
    "4gl",
    "fourgl",
    "sage x3",
    "language server",
    "lsp",
    "code completion",
    "syntax highlighting",
    "programming language"
  ],
  "galleryBanner": {
    "color": "#1e415e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:fourgl"
  ],
  "contributes": {
    "languages": [
      {
        "id": "fourgl",
        "aliases": [
          "4GL",
          "fourgl",
          "Sage X3"
        ],
        "extensions": [
          ".4gl",
          ".src"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "fourgl",
        "scopeName": "source.fourgl",
        "path": "./syntaxes/fourgl.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "4GL Language Configuration",
      "properties": {
        "fourgl.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Maximum number of problems reported for each file"
        },
        "fourgl.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and the 4GL language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.70.0",
    "typescript": "^4.9.0"
  }
}
