{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "4GL",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#sql-keywords"
    },
    {
      "include": "#form-keywords"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.fourgl",
          "match": "\\b(if|then|else|endif|while|for|foreach|end|function|return|main|define|declare|let|case|when|otherwise|endcase|try|catch|finally|throw)\\b"
        },
        {
          "name": "keyword.other.fourgl",
          "match": "\\b(database|table|column|record|array|cursor|report|form|menu|window|dialog|input|display|print|call|exit|continue|break)\\b"
        }
      ]
    },
    "sql-keywords": {
      "patterns": [
        {
          "name": "keyword.other.sql.fourgl",
          "match": "\\b(select|from|where|insert|update|delete|create|drop|alter|grant|revoke|commit|rollback|begin|work|prepare|execute|open|close|fetch|order|by|group|having|union|join|inner|left|right|outer|on|as|distinct|all|and|or|not|null|is|like|between|in|exists|count|sum|avg|min|max)\\b"
        }
      ]
    },
    "form-keywords": {
      "patterns": [
        {
          "name": "keyword.other.form.fourgl",
          "match": "\\b(form|screen|field|page|before|after|on|key|accept|reject|validate|cancel|help|message|error|prompt|options|attributes|color|reverse|blink|underline|normal|bold)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.fourgl",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.fourgl",
          "match": "\\\\."
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.fourgl",
          "match": "//.*$"
        },
        {
          "name": "comment.block.fourgl",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.fourgl",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.fourgl",
          "match": "(\\+|\\-|\\*|\\/|%|=|<>|!=|<|>|<=|>=|\\|\\||&&)"
        }
      ]
    }
  },
  "scopeName": "source.fourgl"
}
